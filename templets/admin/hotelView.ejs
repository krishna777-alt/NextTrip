<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<div class="flex">
  <!-- Sidebar Already Exists -->

  <!-- RIGHT SECTION -->
  <div class="flex-1 bg-gray-100 min-h-screen p-8">
    <!-- Title -->
    <h1 class="text-2xl font-semibold text-gray-800">Hotel Details</h1>
    <p class="text-gray-500 mb-6">View complete information about the hotel.</p>

    <!-- HOTEL CARD -->
    <div class="bg-white p-6 rounded-xl shadow mb-10 border">
      <div class="flex flex-col lg:flex-row gap-6">
        <!-- Left Image -->
        <div class="w-full lg:w-1/3">
          <img
            src="/uploads/hotels/<%= hotel.image %>"
            class="w-full h-60 object-cover rounded-xl shadow"
          />
        </div>

        <!-- Hotel Info -->
        <div class="flex-1 space-y-3">
          <h2 class="text-2xl font-bold"><%= hotel.name %></h2>

          <div class="flex items-center gap-2">
            <span class="text-yellow-500 text-xl">★</span>
            <span class="font-semibold text-gray-700"><%= hotel.rating %></span>
          </div>

          <p class="text-gray-600"><%= hotel.address %></p>

          <div class="grid grid-cols-2 gap-4 mt-4 text-sm">
            <p>
              <span class="font-semibold text-gray-700">State:</span> <%=
              hotel.state %>
            </p>
            <p>
              <span class="font-semibold text-gray-700">Place:</span> <%=
              hotel.place %>
            </p>
            <p>
              <span class="font-semibold text-gray-700">Price:</span> ₹<%=
              hotel.price %> / night
            </p>
            <p>
              <span class="font-semibold text-gray-700">Total Rooms:</span> <%=
              hotel.totalRooms %>
            </p>
            <p>
              <span class="font-semibold text-gray-700">Status:</span>
              <% if(hotel.isApproved){ %>
              <span class="text-green-600 font-semibold">Approved</span>
              <% } else { %>
              <span class="text-red-600 font-semibold">Pending</span>
              <% } %>
            </p>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="mt-6">
        <h3 class="font-semibold text-gray-800 mb-2">Description</h3>
        <p class="text-gray-600 leading-relaxed"><%= hotel.description %></p>
      </div>
    </div>

    <!-- GALLERY -->
    <div class="bg-white p-6 rounded-xl shadow mb-10 border">
      <h3 class="text-xl font-semibold mb-4">Gallery Images</h3>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% hotel.galleryImages.forEach(img => { %>
        <img
          src="/uploads/hotels/<%= img %>"
          class="h-32 w-full object-cover rounded-lg border shadow-sm"
        />
        <% }) %>
      </div>
    </div>

    <!-- AMENITIES -->
    <div class="bg-white p-6 rounded-xl shadow mb-10 border">
      <h3 class="text-xl font-semibold mb-4">Amenities</h3>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <% hotel.amenities.forEach(a => { %>
        <div class="px-4 py-2 bg-gray-100 rounded-lg border text-gray-700">
          <%= a %>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- ROOM TYPES -->
   

    <!-- FACILITIES -->
    <div class="bg-white p-6 rounded-xl shadow mb-10 border">
      <h3 class="text-xl font-semibold mb-4">Hotel Facilities</h3>

      <div class="space-y-6">
        <div class="border p-4 rounded-xl bg-gray-50">
          <p class="font-semibold text-gray-800 mb-2">
            <%= facilities.category %>
          </p>

          <div class="flex flex-wrap gap-2">
            <span
              class="px-3 py-1 text-sm bg-white rounded-md border shadow-sm"
            >
              <%= facilities.facilities[0] %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
