<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<div class="p-6 max-w-7xl mx-auto space-y-8">
  <!-- Header -->
  <div class="flex flex-col lg:flex-row gap-6">
    <img
      src="/uploads/hotels/<%= hotel.image %>"
      class="w-full lg:w-96 h-64 object-cover rounded-2xl shadow"
    />

    <div class="flex-1 space-y-3">
      <div class="flex items-center gap-3">
        <h1 class="text-3xl font-bold text-gray-800"><%= hotel.name %></h1>

        <% if (hotel.isApproved) { %>
        <span
          class="px-3 py-1 text-xs rounded-full bg-green-100 text-green-700"
        >
          Approved
        </span>
        <% } else { %>
        <span
          class="px-3 py-1 text-xs rounded-full bg-yellow-100 text-yellow-700"
        >
          Pending Approval
        </span>
        <% } %>
      </div>

      <p class="text-gray-600 max-w-2xl"><%= hotel.description %></p>

      <div class="flex flex-wrap gap-3 text-sm">
        <span class="px-3 py-1 bg-gray-100 rounded-full">
          üìç <%= hotel.place %>, <%= hotel.state %>
        </span>
        <span class="px-3 py-1 bg-gray-100 rounded-full">
          ‚≠ê <%= hotel.rating %> / 5
        </span>
        <span class="px-3 py-1 bg-gray-100 rounded-full">
          üí∞ ‚Çπ<%= hotel.price %> / night
        </span>
        <span class="px-3 py-1 bg-gray-100 rounded-full">
          üè® Rooms: <%= hotel.totalRooms %>
        </span>
      </div>
    </div>
  </div>

  <!-- Manager Info -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Hotel Manager</h2>

    <% if (manager) { %>
    <div class="grid sm:grid-cols-3 gap-4 text-sm">
      <div>
        <p class="text-gray-500">Name</p>
        <p class="font-medium"><%= manager.name %></p>
      </div>
      <div>
        <p class="text-gray-500">Email</p>
        <p class="font-medium"><%= manager.email %></p>
      </div>
      <div>
        <p class="text-gray-500">Username</p>
        <p class="font-medium"><%= manager.username %></p>
      </div>
    </div>
    <% } else { %>
    <p class="text-red-500 text-sm">No manager assigned</p>
    <% } %>
  </div>

  <!-- Amenities -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Amenities</h2>

    <div class="flex flex-wrap gap-2">
      <% hotel.amenities.forEach(a => { %>
      <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm">
        <%= a %>
      </span>
      <% }) %>
    </div>
  </div>

  <!-- Facilities -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Facilities</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% facilities.forEach(f => { %>
      <div class="border rounded-xl p-4">
        <p class="text-xs text-gray-400 uppercase mb-1"><%= f.category %></p>
        <p class="font-medium text-gray-800"><%= f.facilityCode %></p>
        <div class="mt-2 flex flex-wrap gap-2">
          <% f.facilities.forEach(item => { %>
          <span class="px-2 py-1 text-xs bg-gray-100 rounded">
            <%= item %>
          </span>
          <% }) %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <!-- Gallery -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Gallery</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% hotel.galleryImages.forEach(img => { %>
      <img
        src="/uploads/hotels/<%= img %>"
        class="h-40 w-full object-cover rounded-xl hover:scale-105 transition"
      />
      <% }) %>
    </div>
  </div>

  <!-- Room Types -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Room Types</h2>

    <div class="overflow-x-auto">
      <table class="w-full text-sm border-collapse">
        <thead>
          <tr class="bg-gray-100 text-left">
            <th class="p-3">Code</th>
            <th class="p-3">Category</th>
            <th class="p-3">Occupancy</th>
            <th class="p-3">Price</th>
            <th class="p-3">Rooms</th>
            <th class="p-3">Status</th>
          </tr>
        </thead>
        <tbody>
          <% roomTypes.forEach(room => { %>
          <tr class="border-b">
            <td class="p-3 font-medium"><%= room.roomTypeCode %></td>
            <td class="p-3"><%= room.category %></td>
            <td class="p-3">üë® <%= room.adults %> | üë∂ <%= room.children %></td>
            <td class="p-3">‚Çπ<%= room.price %></td>
            <td class="p-3"><%= room.roomNum %></td>
            <td class="p-3">
              <% if (room.isBooked) { %>
              <span class="text-red-500">Booked</span>
              <% } else { %>
              <span class="text-green-600">Available</span>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Admin Actions -->
  <div class="flex justify-end gap-4">
    <a
      href="/admin/hotels/edit/<%= hotel._id %>"
      class="px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700"
    >
      Edit Hotel
    </a>

    <% if (!hotel.isApproved) { %>
    <a
      href="/admin/hotels/approve/<%= hotel._id %>"
      class="px-6 py-3 bg-green-600 text-white rounded-xl hover:bg-green-700"
    >
      Approve
    </a>
    <% } %>
  </div>
</div>
