<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<div class="p-6 max-w-5xl mx-auto space-y-8">
  <!-- Header -->
  <div class="flex items-center gap-6 bg-white rounded-2xl shadow p-6">
    <img
      src="/uploads/user/<%= user.avatar %>"
      class="h-28 w-28 rounded-full object-cover border"
      alt="User Avatar"
    />

    <div class="flex-1">
      <div class="flex items-center gap-3">
        <h1 class="text-2xl font-bold text-gray-800"><%= user.name %></h1>

        <span
          class="px-3 py-1 text-xs rounded-full <%= user.role === 'admin' ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700' %>"
        >
          <%= user.role %>
        </span>
      </div>

      <p class="text-gray-500 mt-1"><%= user.email %></p>

      <p class="text-sm text-gray-400 mt-2">
        Joined on
        <span class="font-medium text-gray-600">
          <%= new Date(user.createdAt).toLocaleDateString('en-IN', { year:
          'numeric', month: 'long', day: 'numeric' }) %>
        </span>
      </p>
    </div>
  </div>

  <!-- User Details -->
  <div class="bg-white rounded-2xl shadow p-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">User Information</h2>

    <div class="grid sm:grid-cols-2 gap-6 text-sm">
      <div>
        <p class="text-gray-500">Full Name</p>
        <p class="font-medium text-gray-800"><%= user.name %></p>
      </div>

      <div>
        <p class="text-gray-500">Email Address</p>
        <p class="font-medium text-gray-800"><%= user.email %></p>
      </div>

      <div>
        <p class="text-gray-500">Phone Number</p>
        <p class="font-medium text-gray-800">
          <%= user.phone || 'Not Provided' %>
        </p>
      </div>

      <div>
        <p class="text-gray-500">Account Role</p>
        <p class="font-medium text-gray-800 capitalize"><%= user.role %></p>
      </div>

      <div>
        <p class="text-gray-500">Account Created</p>
        <p class="font-medium text-gray-800">
          <%= new Date(user.createdAt).toLocaleString('en-IN') %>
        </p>
      </div>

      <div>
        <p class="text-gray-500">Last Updated</p>
        <p class="font-medium text-gray-800">
          <%= new Date(user.updatedAt).toLocaleString('en-IN') %>
        </p>
      </div>
    </div>
  </div>

  <!-- Admin Actions -->
  <div class="flex justify-end gap-4">
    <a
      href="/admin/currentUser/<%= user._id %>"
      class="px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition"
    >
      Edit User
    </a>

    <a
      href="/admin/users/delete/<%= user._id %>"
      onclick="return confirm('Are you sure you want to delete this user?')"
      class="px-6 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 transition"
    >
      Delete User
    </a>
  </div>
</div>
