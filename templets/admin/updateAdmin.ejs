<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Update Admin</title>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

  <div class="bg-white w-full max-w-2xl p-8 rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6">Update Admin</h2>

    <form class="space-y-5">

      <!-- Profile Photo -->
      <div>
        <label class="block mb-1 font-medium">Profile Photo</label>
        <div class="flex items-center gap-5">
          <img id="photoPreview" src="https://i.pravatar.cc/100" 
               class="w-20 h-20 rounded-full object-cover border" />
          
          <input 
            type="file" 
            accept="image/*"
            onchange="previewPhoto(event)"
            class="block w-full text-gray-800 border border-gray-300 rounded-lg p-2"
          />
        </div>
      </div>

      <!-- Name -->
      <div>
        <label class="block mb-1 font-medium">Name</label>
        <input 
          type="text" 
          class="w-full p-3 border rounded-lg"
          placeholder="Enter admin name"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input 
          type="email" 
          class="w-full p-3 border rounded-lg"
          placeholder="admin@example.com"
        />
      </div>

      <!-- Password -->
      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input 
          type="password" 
          class="w-full p-3 border rounded-lg"
          placeholder="Enter new password"
        />
      </div>

      <!-- Role -->
      <div>
        <label class="block mb-1 font-medium">Role</label>
        <select class="w-full p-3 border rounded-lg">
          <option value="superadmin">Super Admin</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <!-- Buttons -->
      <div class="flex justify-between mt-6">
        <a href="manage-admin.html" 
           class="px-5 py-3 rounded-lg bg-gray-300 text-gray-800 hover:bg-gray-400">
          Cancel
        </a>

        <button 
          type="submit"
          class="px-5 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
          Update Admin
        </button>
      </div>

    </form>
  </div>


  <script>
    function previewPhoto(event) {
      const img = document.getElementById("photoPreview");
      img.src = URL.createObjectURL(event.target.files[0]);
    }
  </script>

</body>
</html>
