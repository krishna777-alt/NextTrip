<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Manage Admin | TripNext</title>
</head>
<body class="bg-gray-100 min-h-screen p-4">
  <div class="max-w-6xl mx-auto">
  
    <!-- Page Header -->
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Admin</h1>

        <% if (successMsg && successMsg.length > 0) { %>
      <div id="toast"
          class="fixed top-4 right-4 px-4 py-2 bg-green-600 text-white rounded shadow">
          <%= successMsg %>
      </div>
    <% } %>

    <script>
      const toast = document.getElementById("toast");
      if (toast) {
        setTimeout(() => {
          toast.style.display = "none";
        }, 3000);
      }
    </script>


    <!-- CREATE ADMIN FORM -->
    <div class="bg-white shadow p-6 rounded-xl mb-8">
      <h2 class="text-xl font-semibold mb-4">Create New Admin</h2>
      <form enctype="multipart/form-data" 
        action="http://localhost:3000/api/v1/admin/manage-admin" 
        method="post" 
        id="createAdminForm" 
        class="grid grid-cols-1 md:grid-cols-2 gap-4">

        <div>
            <label class="block mb-1 font-medium">Full Name</label>
            <input name="name" type="text" class="w-full border p-2 rounded" required />
        </div>

        <div>
            <label class="block mb-1 font-medium">Email</label>
            <input name="email" type="email" class="w-full border p-2 rounded" required />
        </div>

        <div>
            <label class="block mb-1 font-medium">Password</label>
            <input name="password" type="password" class="w-full border p-2 rounded" required />
        </div>

        <div>
            <label class="block mb-1 font-medium">Profile Photo</label>
            <input name="image" type="file" class="w-full border p-2 rounded bg-white" accept="image/*" />
        </div>

        <div class="md:col-span-2 text-right">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Create Admin
            </button>
        </div>

        </form>

    </div>

    <!-- ADMIN LIST TABLE -->
    <div class="bg-white shadow p-6 rounded-xl">
      <h2 class="text-xl font-semibold mb-4">Admin List</h2>

      <table class="w-full text-left border-collapse">
        <thead>
          <tr class="bg-gray-200">
            <th class="p-3">Photo</th>
            <th class="p-3">Name</th>
            <th class="p-3">Email</th>
            <th class="p-3">Actions</th>
          </tr>
        </thead>
        <tbody id="adminTable"></tbody>
      </table>
    </div>
  </div>

<script>

    async function loadAdmins() {
    const res = await fetch("http://localhost:3000/api/v1/admin/get");
    const admins = await res.json(); // this is the array

    const adminTable = document.getElementById("adminTable");
    adminTable.innerHTML = "";

    admins.forEach(admin => {
        adminTable.innerHTML += `
        <tr class="border-b">
            <td class="p-3"><img src="/uploads/adminProfiles/${admin.image}" class="w-10 h-10 rounded-full" /></td>
            <td class="p-3 font-medium">${admin.name}</td>
            <td class="p-3">${admin.email}</td>
            <td class="p-3 flex gap-2">
            <a href='/api/v1/admin/update/${admin._id}' class="px-3 py-1 bg-yellow-500 text-white rounded">Edit</a>
            <a onclick="deleteAdmin('${admin._id}')" class="px-3 py-1 bg-red-600 text-white rounded">Delete</a>
            </td>
        </tr>
        `;
    });
    }

    loadAdmins();
</script>

</body>
</html>
