<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotels - NextTrip</title>

    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100">
    <!-- Navbar -->
    <%- include("navBar") %>

    <!-- Header -->
    <section
      class="text-center py-20 text-white bg-cover bg-center relative"
      style="background-image: url('/images/hotel-room-1447201_1280.jpg')"
    >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-blue-700/50"></div>

      <div class="relative z-10">
        <h1 class="text-4xl font-bold">Find the Best Hotels</h1>
        <p class="mt-2 text-lg">Comfortable stays at the best prices</p>
      </div>
    </section>
    <!-- <section
      class="text-center py-20 text-white bg-cover bg-center relative"
      style="
        background-image: url('/images/eva-darron-1QlspiAMBk4-unsplash.jpg');
      "
    >
      <div class="absolute inset-0 bg-black/50"></div>
      <div class="relative z-10">
        <h1 class="text-4xl font-bold">Find the Best Hotels</h1>
        <p class="mt-2 text-lg">Comfortable stays at the best prices</p>
      </div>
    </section> -->

    <!-- Main Container -->
    <div class="max-w-7xl mx-auto px-6 py-10">
      <!-- Filters -->
      <div
        class="bg-white shadow p-5 rounded-xl mb-8 border grid grid-cols-1 md:grid-cols-3 gap-6"
      >
        <!-- Rating Filter -->
        <div>
          <label class="font-semibold">Rating</label>
          <select
            id="filterRating"
            class="w-full mt-1 p-3 border rounded-lg bg-gray-50"
          >
            <option value="all">All Ratings</option>
            <option value="4">4★ & above</option>
            <option value="3">3★ & above</option>
            <option value="2">2★ & above</option>
          </select>
        </div>

        <!-- Price Filter -->
        <div>
          <label class="font-semibold">Price</label>
          <select
            id="filterPrice"
            class="w-full mt-1 p-3 border rounded-lg bg-gray-50"
          >
            <option value="all">All Prices</option>
            <option value="low">Below ₹1500</option>
            <option value="mid">₹1500 - ₹3000</option>
            <option value="high">₹3000+</option>
          </select>
        </div>

        <!-- AC Filter -->
        <!-- <div>
          <label class="font-semibold">Room Type</label>
          <select
            id="filterAC"
            class="w-full mt-1 p-3 border rounded-lg bg-gray-50"
          >
            <option value="all">All</option>
            <option value="ac">AC</option>
            <option value="nonac">Non-AC</option>
          </select>
        </div> -->
      </div>

      <!-- Hotel Cards -->
      <div
        id="hotelContainer"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"
      >
        <% hotels.forEach(hotel => { %>
        <div class="bg-white border rounded-xl shadow overflow-hidden">
          <img
            src="/uploads/hotels/<%= hotel.images ? hotel.images[0] : hotel.image %>"
            class="h-48 w-full object-cover"
          />

          <div class="p-5">
            <h3 class="text-xl font-bold"><%= hotel.name %></h3>
            <p class="text-yellow-500 font-semibold mb-1">
              ⭐ <%= hotel.rating %>/5
            </p>
            <p class="text-gray-700 mb-2 font-medium">
              ₹ <%= hotel.price %> / night
            </p>
            <p class="text-sm mb-4">
              <span
                class="px-3 py-1 rounded-full text-white <%= acRooms ? 'bg-blue-600' : 'bg-gray-600' %>"
              >
                <%= acRooms ? "AC Room" : "Non-AC Room" %>
              </span>
            </p>

            <div class="flex gap-3 mt-4">
              <a
                href="/hotelRooms/<%= hotel._id %>"
                class="w-1/2 text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700"
              >
                Book Now
              </a>

              <a
                href="/hotelDetails/<%= hotel._id %>"
                class="w-1/2 text-center border border-blue-600 text-blue-600 py-2 rounded-lg hover:bg-blue-50"
              >
                Details
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include("footer") %>

    <!-- Filter Script -->
    <script>
      const allHotels = <%- JSON.stringify(hotels) %>;
      const container = document.getElementById("hotelContainer");

      const filterRating = document.getElementById("filterRating");
      const filterPrice = document.getElementById("filterPrice");
     

      function renderHotels(list) {
        container.innerHTML = "";

        if (list.length === 0) {
          container.innerHTML = '<p class="col-span-full text-center text-gray-500 py-10">No hotels match your filters</p>';
          return;
        }

        list.forEach((h) => {
          container.innerHTML += `
            <div class="bg-white border rounded-xl shadow overflow-hidden">
              <img src="/uploads/hotels/${h.images ? h.images[0] : h.image}" class="h-48 w-full object-cover" />

              <div class="p-5">
                <h3 class="text-xl font-bold">${h.name}</h3>
                <p class="text-yellow-500 font-semibold mb-1">⭐ ${h.rating}/5</p>
                <p class="text-gray-700 mb-2 font-medium">₹ ${h.price} / night</p>

                <p class="text-sm mb-4">
                  
                </p>

                <div class="flex gap-3 mt-4">
                  <a href="/hotelRooms/${h._id}" class="w-1/2 text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">
                    Book Now
                  </a>
                  <a href="/displayHotelDetails/${h._id}" class="w-1/2 text-center border border-blue-600 text-blue-600 py-2 rounded-lg hover:bg-blue-50">
                    Details
                  </a>
                </div>
              </div>
            </div>
          `;
        });
      }

      function applyFilters() {
        const rating = filterRating.value;
        const price = filterPrice.value;
       
        // console.log("AC:"+ac);
        let filtered = allHotels.slice();

        // Rating filter
        if (rating !== "all") {
          filtered = filtered.filter((h) => h.rating >= Number(rating));
        }

        // Price filter
        if (price === "low") filtered = filtered.filter((h) => h.price < 1500);
        if (price === "mid")
          filtered = filtered.filter((h) => h.price >= 1500 && h.price <= 3000);
        if (price === "high") filtered = filtered.filter((h) => h.price > 3000);

        // AC Filter
        

        renderHotels(filtered);
      }

      // Initialize filters on page load
      document.addEventListener('DOMContentLoaded', () => {
        applyFilters();
      });

      filterRating.addEventListener("change", applyFilters);
      filterPrice.addEventListener("change", applyFilters);
      filterAC.addEventListener("change", applyFilters);
    </script>
  </body>
</html>
