<%- include("navBar")%>

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gray-100">
    <!-- Container -->
    <div class="max-w-7xl mx-auto px-6 py-12">
      <!-- Top Bar -->
      <div class="flex items-center justify-between mb-8">
        <p id="items-text" class="text-sm text-gray-500">Items 1 to 6 of 6 items</p>

        <div class="flex items-center gap-4 text-sm">
          <div>
            Show
            <select id="show-select" class="border rounded px-2 py-1">
              <option>6</option>
               <option>3</option>
              <option>12</option>
            </select>
            per page
          </div>

          <div>
            Sort by:
            <select id="sort-select" class="border rounded px-2 py-1">
              
              <option>Price</option>
              <option>AC</option>
              <option>NON-AC</option>
              <option>Executive</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Rooms Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card -->
        <% rooms.forEach((room, index) => { 
   const availableRooms = room.availableRooms || 5; // fallback
%>

<div
  class="bg-white shadow-sm rounded-xl overflow-hidden group hover:shadow-lg transition duration-300"
  data-price="<%= room.price %>" data-ac="<%= room.ac %>" data-type="<%= room.roomTypeCode %>"
>
  <!-- IMAGE AREA -->
  <div class="relative overflow-hidden">
    
    <!-- ROOM NUMBER -->
    <div
      class="absolute top-3 left-3 bg-black/80 text-white text-xs font-semibold
             px-3 py-1 rounded-full backdrop-blur z-10"
    >
      Room <%= room.roomNum %>
    </div>

    <!-- AVAILABILITY BADGE -->
    <div
      class="absolute top-3 right-3 px-3 py-1 rounded-full text-xs font-semibold z-10
      <%=  !room.isBooked
          ? 'bg-blue-600 text-white' 
          : 'bg-gray-800 text-gray-300' %>"
    >
      <%= !room.isBooked ? 'Available' : 'Booked' %>
    </div>

    <!-- FLOATING PRICE -->
    <div
      class="absolute bottom-3 left-3 bg-white text-gray-900 text-sm font-semibold
             px-4 py-2 rounded-full shadow z-10"
    >
      ‚Çπ <%= room.price %> / night
    </div>

    <!-- IMAGE -->
    <img
      src="/uploads/hotels/<%= room.roomPhotos[0] %>"
      class="w-full h-56 object-cover group-hover:scale-105 transition duration-500"
    />
  </div>

  <!-- CONTENT -->
  <div class="p-6 text-center">
    
    <h3 class="text-lg font-semibold mb-1">
      <%= room.roomTypeCode %>
    </h3>

    <!-- ICON ROW -->
    <div class="flex justify-center gap-4 text-sm text-gray-500 mb-3">
      <span>üõè <%= room.bedConfiguration?.[0] || 'Comfort Bed' %></span>
      <span>‚ùÑ <%= room.ac %></span>
      <span>üë• <%= room.maxOccupancy %> Guests</span>
    </div>

    <!-- DESCRIPTION -->
    <p class="text-sm text-gray-500 leading-relaxed mb-4">
      <%= room.description || 'Modern room with premium comfort, ideal for a relaxing stay.' %>
    </p>

    <!-- URGENCY -->
    <% if (availableRooms > 0 && availableRooms <= 3) { %>
      <p class="text-sm text-red-600 font-medium mb-3">
        Only <%= availableRooms %> rooms left
      </p>
    <% } %>

    <!-- CTA -->
    <a
      href="/hotelRooms/displayRooms/<%= room._id %>"
      class="inline-block w-full px-6 py-3 bg-indigo-600 text-white text-sm rounded-lg
             hover:bg-indigo-700 transition"
    >
      View Details
    </a>
  </div>
</div>

<% }) %>

       
      </div>

      <!-- Pagination -->
      <div class="flex items-center justify-between mt-8">
        <p id="page-text" class="text-sm text-gray-500">Page 1 of 1</p>
        <div>
          <button id="prev-btn" class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 disabled:opacity-50" disabled>Previous</button>
          <button id="next-btn" class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 disabled:opacity-50 ml-2">Next</button>
        </div>
      </div>
    </div>

<script>
const showSelect = document.getElementById('show-select');
const sortSelect = document.getElementById('sort-select');
const roomsContainer = document.querySelector('.grid');
const roomCards = Array.from(roomsContainer.children);
const itemsText = document.getElementById('items-text');
const prevBtn = document.getElementById('prev-btn');
const nextBtn = document.getElementById('next-btn');
const pageText = document.getElementById('page-text');

let currentPage = 1;

function updateDisplay() {
  const show = parseInt(showSelect.value);
  const sortBy = sortSelect.value;
  const total = roomCards.length;

  // sort the cards
  roomCards.sort((a, b) => {
    if (sortBy === 'Price') {
      return parseInt(a.dataset.price) - parseInt(b.dataset.price);
    } else if (sortBy === 'AC') {
      return a.dataset.ac.localeCompare(b.dataset.ac);
    } else if (sortBy === 'NON-AC') {
      return b.dataset.ac.localeCompare(a.dataset.ac);
    } else if (sortBy === 'Executive') {
      const aExec = a.dataset.type.toLowerCase().includes('executive') ? 1 : 0;
      const bExec = b.dataset.type.toLowerCase().includes('executive') ? 1 : 0;
      return bExec - aExec;
    }
    return 0;
  });

  const totalPages = Math.ceil(total / show);
  if (currentPage > totalPages) currentPage = totalPages || 1;
  if (currentPage < 1) currentPage = 1;

  const start = (currentPage - 1) * show;
  const end = start + show;
  const visibleCards = roomCards.slice(start, end);

  // clear container
  roomsContainer.innerHTML = '';

  // append visible
  visibleCards.forEach(card => roomsContainer.appendChild(card));

  // update texts
  const showing = visibleCards.length;
  const startItem = start + 1;
  const endItem = start + showing;
  itemsText.textContent = `Items ${startItem} to ${endItem} of ${total} items`;
  pageText.textContent = `Page ${currentPage} of ${totalPages}`;

  // buttons
  prevBtn.disabled = currentPage <= 1;
  nextBtn.disabled = currentPage >= totalPages;
}

showSelect.addEventListener('change', () => {
  currentPage = 1;
  updateDisplay();
});

sortSelect.addEventListener('change', () => {
  currentPage = 1;
  updateDisplay();
});

prevBtn.addEventListener('click', () => {
  if (currentPage > 1) {
    currentPage--;
    updateDisplay();
  }
});

nextBtn.addEventListener('click', () => {
  const totalPages = Math.ceil(roomCards.length / parseInt(showSelect.value));
  if (currentPage < totalPages) {
    currentPage++;
    updateDisplay();
  }
});

// initial
updateDisplay();
</script>

  </body>
