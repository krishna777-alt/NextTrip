<section class="p-6">
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <div class="p-5 border-b flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-800">My Packages</h2>
      <button class="px-4 py-2 bg-blue-600 text-white rounded-xl shadow hover:bg-blue-700 transition">
        + Add New Package
      </button>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead>
          <tr class="bg-gray-100 text-gray-700 text-left">
            <th class="p-3 font-semibold">Image</th>
            <th class="p-3 font-semibold">Title</th>
            <th class="p-3 font-semibold">Location</th>
            <th class="p-3 font-semibold">Price</th>
            <th class="p-3 font-semibold">Actions</th>
          </tr>
        </thead>

        <tbody>
          <!-- Row Example -->
        <% packages.forEach(pkg => {%>
                      
          <tr class="border-b hover:bg-gray-50 transition">
            <td class="p-3">
              <img src="/uploads/packages/<%= pkg.images %>" class="h-16 w-20 object-cover rounded-lg shadow-sm" />
            </td>

            <td class="p-3 text-gray-800 font-medium">
              <%= pkg.title %>
            </td>

            <td class="p-3 text-gray-600">
              <%= pkg.location %>
            </td>

            <td class="p-3 text-gray-800 font-semibold">
              â‚¹<%= pkg.price %>
            </td>

            <td class="p-3">
              <div class="flex items-center gap-3">
                
                <button class="px-3 py-1 bg-green-500 text-white text-sm rounded-lg shadow hover:bg-green-600 transition">
                  Edit
                </button>

                <button class="px-3 py-1 bg-red-500 text-white text-sm rounded-lg shadow hover:bg-red-600 transition">
                  Delete
                </button>

              </div>
            </td>
          </tr>
           <%}); %>
          <!-- COPY THIS TR FOR MORE ROWS -->
        </tbody>
      </table>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

