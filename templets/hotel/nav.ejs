<!-- Mobile Toggle Button -->
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<button
  id="sidebarToggle"
  class="md:hidden p-3 m-3 bg-gray-900 text-white rounded-lg"
>
  â˜°
</button>

<!-- Sidebar -->
<aside
  id="agentSidebar"
  class="fixed md:static left-0 top-0 w-64 bg-gray-900 text-white min-h-screen p-5 transform -translate-x-full md:translate-x-0 transition-all duration-300 z-50"
>
  <h2 class="text-3xl font-bold mb-8 tracking-wide">Manager Panel</h2>

  <nav class="space-y-2">
    <a
      href="http://localhost:3000/hotel/"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-chart-line"></i>
      <span>Dashboard</span>
    </a>

    <a
      href="http://localhost:3000/hotel/manageHotel"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-plus-circle"></i>
      <span>Hotel</span>
    </a>

    <a
      href="http://localhost:3000/api/v1/agent/agentPackage"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-suitcase-rolling"></i>
      <span>My Packages</span>
    </a>

    <a
      href="/agent/bookings"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-ticket"></i>
      <span>Bookings</span>
    </a>

    <a
      href="/agent/earnings"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-wallet"></i>
      <span>Earnings</span>
    </a>

    <a
      href="http://localhost:3000/api/v1/agent/profile"
      class="nav-item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700"
    >
      <i class="fa-solid fa-user"></i>
      <span>Profile</span>
    </a>
    <% if(manager){%>
    <a
      href="http://localhost:3000/hotel/logout"
      class="block p-3 rounded-lg bg-red-600 hover:bg-red-700 mt-6 text-center"
    >
      Logout
    </a>
    <%} else{%>
    <a
      href="http://localhost:3000/hotel/login"
      class="block p-3 rounded-lg bg-red-600 hover:bg-red-700 mt-6 text-center"
    >
      Login
    </a>
    <%}%>
  </nav>
</aside>

<!-- JavaScript -->
<script>
  const sidebar = document.getElementById("agentSidebar");
  const toggleBtn = document.getElementById("sidebarToggle");

  toggleBtn.addEventListener("click", () => {
    sidebar.classList.toggle("-translate-x-full");
  });

  // Highlight active page
  const currentPath = window.location.pathname;
  document.querySelectorAll(".nav-item").forEach((item) => {
    if (item.getAttribute("href") === currentPath) {
      item.classList.add("bg-gray-700");
    }
  });
</script>

