<%- include("nav")%>
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<div
  class="max-w-7xl mx-auto px-6 mt-10 mb-6 flex items-center justify-between"
>
  <h1 class="text-2xl font-semibold text-gray-800">Manage Rooms</h1>
  <p>Total Rooms <%= totalRooms %></p>
  <a
    href="http://localhost:3000/hotel/rooms/addRoom"
    class="inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700 transition"
  >
    <span class="text-lg font-bold leading-none">ï¼‹</span>
    Add Room
  </a>
</div>

<div class="max-w-7xl mx-auto px-6 pb-10">
  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center"
  >
    <% rooms.forEach(room => { %>

    <!-- ROOM CARD -->
    <div
      class="w-full max-w-md bg-white rounded-2xl shadow hover:shadow-xl transition overflow-hidden"
    >
      <!-- Image -->
      <div class="h-48 bg-gray-100 overflow-hidden">
        <img
          src="/uploads/hotels/<%= room.mainImage || room.roomPhotos[0] %>"
          class="w-full h-full object-cover hover:scale-105 transition duration-300"
          alt="Room Image"
        />
      </div>

      <!-- Content -->
      <div class="p-5 space-y-3">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-800">
            <%= room.roomTypeCode %>
          </h2>

          <span
            class="px-3 py-1 text-xs font-medium rounded-full <%= room.ac === 'AC' ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-700' %>"
          >
            <%= room.ac %>
          </span>
        </div>
        <p class="text-lg font-semibold text-gray-800"><%= room.price %></p>
        <p class="text-sm text-gray-600">
          Max <strong><%= room.maxOccupancy %></strong> Guests (<%= room.adults
          %> Adults, <%= room.children %> Children)
        </p>

        <!-- Beds -->
        <div class="flex flex-wrap gap-2">
          <% room.bedConfiguration.forEach(bed => { %>
          <span
            class="px-3 py-1 text-xs bg-indigo-50 text-indigo-700 rounded-md"
          >
            <%= bed %>
          </span>
          <% }) %>
          <span
            class="px-3 py-1 text-xs bg-indigo-50 text-indigo-700 rounded-md"
          >
            Room:<%= room.roomNum %>
          </span>
        </div>

        <!-- Divider -->
        <hr class="pt-2" />

        <!-- Actions -->
        <div class="flex items-center justify-between">
          <a
            href="http://localhost:3000/hotel/rooms/showRoom/<%= room._id %>"
            class="px-4 py-1.5 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200"
          >
            View
          </a>

          <div class="flex gap-2">
            <a
              href="http://localhost:3000/hotel/rooms/updateRoom/<%= room._id %>"
              class="px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200"
            >
              Edit
            </a>
            <a
              href="/admin/rooms/delete/<%= room._id %>"
              class="px-3 py-1.5 bg-red-100 text-red-700 rounded-lg hover:bg-red-200"
            >
              Delete
            </a>
          </div>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</div>
